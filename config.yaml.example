# RECORDING CONFIGURATION
RECORD_FOLDER: /home/user/recordings
RECORD: False
# length of videos to record in seconds
RECORD_LENGTH: 300  # 60 * 5 = 300 for 5 minutes
# num seconds after program starts to begin video recording
PAUSE_BEFORE_RECORD: 5  # 90 for current spec

# CAMERA CONFIGURATIONS
CAMERA_RESOLUTION: [1920, 1080]
VIDEO_QUALITY: 20  # between 1 and 40, 1 is highest, 40 lowest
FRAME_RATE: 25
CAMERA_ANGLE: 90
PREVIEW_ON: true

# SCREEN CONFIGURATIONS
DISPLAY_RESOLUTION: [640, 480]

# HEADLESS: False

# AI CONFIGURATIONS
# bird, person, giraffe, cup, cat, dog, horse, sheep, cow, elephant, bear, zebra
# TRACKED_CLASS: [giraffe, person]
FILTER_CLASS: bird

CONF_THRESHOLD: .1
NMS_THRESHOLD: .9
INPUT_WIDTH: 416
INPUT_HEIGHT: 416

MODEL_PATH: /usr/share/edgetpu/examples/models/

OBJ_MODEL_CONFIG_FILE: ssd_mobilenet_v1_coco_quant_postprocess_edgetpu.tflite
MODEL_WEIGHTS_FILE: N/A
OBJ_CLASS_NAMES_FILE: coco_labels.txt

MODEL_CONFIG_FILE: mobilenet_v2_1.0_224_inat_bird_quant_edgetpu.tflite
CLASS_NAMES_FILE: inat_bird_labels.txt
